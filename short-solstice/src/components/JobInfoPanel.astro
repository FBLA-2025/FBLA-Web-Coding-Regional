---
import jobs from "../../dummy-data/jobs.json";
// console.log(jobs);
---

<div id="approval-list">
  <div id="header">
    <h2>Job Information</h2>
  </div>
  <div id="jobs-list">
    {
      jobs.map((job) => (
        <div class="job-list-item">
          <h3>
            <i class="fa-solid fa-circle-chevron-right" />
            {/* <i class="fa-solid fa-chevron-right" /> */}
            <span>{job.jobName}</span>
          </h3>
        </div>
      ))
    }
