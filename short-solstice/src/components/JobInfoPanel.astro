  </div>
</div>

<style>
  #approval-list {
    width: 55%;
    /* margin-top: 3vw; */
    margin-bottom: 3vw;
    margin-right: 4vw;
    /* margin-left: 0.5vw; */
    border-radius: 1rem;
    border: 3px solid black;
    overflow: hidden;
    height: 70vh;
  }
  
  #header {
    text-align: center;
    background-color: lightgray;
    border-bottom: 3px solid black;
    padding: 1vw;
    font-size: 1.2vw;
  }

  #jobs-list {
    overflow-y: auto;
    height: 100%;
  }

  .job-list-item {
    border-bottom: 3px solid black;
    padding: 0.75vw;
    h3 {
        font-size: 1.1vw;
      i {
        margin-right: 0.5vw;
      }
      span {
        transition: all 0.3s ease;
      }
    }
  }
  .job-list-item > h3 > span:hover {
    padding-left: 0.5vw;
  }
</style>
