---
// import { Button } from '@/components/ui/button';
let isEmployer = true;
let isAdmin = true;

const links = [
  { name: "Home", href: "/" },
  { name: "Jobs", href: "/" },
  { name: "Companies", href: "/" },
  { name: "Contact", href: "/contact" },
  { name: "Log In", href: "/login" },
];

if (isEmployer) {
  links.push({ name: "Post a Job", href: "/jobUpload" });
}
if (isAdmin) {
  links.push({ name: "Admin Hub", href: "/AdminPage" });
}
---

<footer class="footer">
  <div class="container">
    <div class="grid">
      <div class="links">
        <h3 class="title">Quick Links</h3>
        <nav class="nav">
          {
            links.map((link) => (
              <a href={link.href} class="link">
                {link.name}
              </a>
            ))
          }
          {
            /* <a href="/" class="link">Home</a>
          <a href="/jobs" class="link">Job Board</a>
          <a href="/employers" class="link">Employers</a>
          <a href="/resources" class="link">Student Resources</a> */
          }
        </nav>
      </div>
      <div class="links">
        <h3 class="title">Contact Career Services</h3>
        <nav class="nav">
          <a href="/contact" class="link">Schedule Appointment</a>
          <a href="/events" class="link">Career Events</a>
          <a href="/workshops" class="link">Workshops</a>
        </nav>
      </div>
      <div class="subscribe">
        <div class="subscribe-box">
          <h3 class="title">Stay Connected</h3>
          <p class="description">
            Subscribe to receive updates about new job opportunities and career
            events.
          </p>
          <form class="form">
            <input
              type="email"
              placeholder="Enter your school email"
              class="input"
            />
            <button class="button"> Subscribe </button>
          </form>
        </div>
      </div>
    </div>
    <div class="footer-bottom">
      <p>&copy; {new Date().getFullYear()} TalentLink. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: #1a202c;
    color: #f7fafc;
  }
  .container {
    padding: 3rem 1rem;
    max-width: 1280px;
    margin: 0 auto;
  }
  .grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  @media (min-width: 768px) {
    .grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (min-width: 1024px) {
    .grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
  .links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #ffffff;
  }
  .nav {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  .link {
    color: inherit;
    text-decoration: none;
    transition: all 0.3s ease-in-out;
  }
  .link:hover {
    color: #0971e9;
    padding-left: 0.5vw;
  }
  .subscribe {
    grid-column: span 2;
  }
  .subscribe-box {
    background-color: #2d3748;
    border-radius: 0.5rem;
    padding: 1.5rem;
  }
  .description {
    color: #a0aec0;
    margin-bottom: 1rem;
  }
  .form {
    display: flex;
    gap: 0.5rem;
  }
  .input {
    flex: 1;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    background-color: #4a5568;
    color: #ffffff;
    border: none;
    outline: none;
  }
  .input::placeholder {
    color: #a0aec0;
  }
  .input:focus {
    border: 2px solid #0971e9;
  }
  .button {
    background-color: #0971e9;
    color: #ffffff;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    transition: background-color 0.2s;
  }
  .button:hover {
    background-color: rgba(9, 113, 233, 0.9);
  }
  .footer-bottom {
    border-top: 1px solid #2d3748;
    margin-top: 3rem;
    padding-top: 2rem;
    text-align: center;
    color: #a0aec0;
  }
</style>
