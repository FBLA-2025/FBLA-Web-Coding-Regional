---
import Layout from "../layouts/Layout.astro";
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
import ApprovalList from "../components/ApprovalList.astro";
import JobInfoPanel from "../components/JobInfoPanel.astro";

let selectedJob = null;

function handleJobSelect(job) {
  selectedJob = job;
  console.log(selectedJob)
}
---

<Layout title="Admin Page">
  <NavBar />
  <main>
    <ApprovalList onJobSelect={handleJobSelect} />
    <JobInfoPanel job={selectedJob} />
  </main>
  <!-- <h1>Post a job</h1> -->
  <Footer />
</Layout>

<style>
  main {
    display: flex;
    justify-content: space-around;
    margin-top: 5vw;
  }
</style>
